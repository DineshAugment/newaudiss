@using EndToEnd.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";

}
<style>
    html, body {
        background: rgba(0, 0, 0, 0) url("../Content/bg-login.jpg") no-repeat fixed center center / cover;
        height: 100%;
    }

    .form-topsection {
        background: rgba(0, 0, 0, 0) url("../Content/btm-arrow.png") no-repeat scroll center bottom;
        float: left;
        overflow: hidden;
        padding-bottom: 50px;
        position: relative;
        width: 100%;
    }

    .form-section {
        margin: 0 auto;
        width: 320px;
    }

    form {
        float: left;
        width: 100%;
    }

    body {
        color: #555;
        font-family: Verdana,sans-serif;
        font-size: 11px;
        line-height: 1.42857;
    }

    .subscribe-form {
        background: #f7f7f7 none repeat scroll center top 79px;
        border: 3px solid #d3e4ff;
        border-radius: 5px;
        float: left;
        padding-bottom: 35px;
        width: 43%;
        margin-left: 29%;
    }

    .form-topsection {
        background: rgba(0, 0, 0, 0) url("../Content/btm-arrow.png") no-repeat scroll center bottom;
        float: left;
        overflow: hidden;
        padding-bottom: 50px;
        position: relative;
        width: 100%;
    }

    .outer-wrapper {
        float: left;
        height: 100%;
        padding: 100px 0;
        width: 100%;
    }

    .form-topsection h2 {
        background: #1663a7 none repeat scroll 0 0;
        color: #fff;
        font-family: "Oswald",sans-serif;
        font-size: 28px;
        font-weight: 700;
        line-height: 42px;
        margin: 0;
        padding: 15px 30px 0;
        text-align: center;
        text-shadow: 1px 1px 1px #838383;
        text-transform: uppercase;
        width: 100%;
        z-index: 2;
    }

    #divmain {
        display: none !important;
    }

    .form-control1 {
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        color: #555;
        display: block;
        font-size: 11px !important;
        height: auto !important;
        line-height: 1.42857;
        padding: 3px 8px;
        transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
        width: 349px !important;
        height: 40px !important;
    }

    input, select, textarea {
        max-width: 349px !important;
    }

    .btn-block {
        display: block;
        width: 100%;
    }

    .btn-success {
        background-color: #5aad75;
        border-color: #5aad75;
        color: #fff;
    }

    .text-center {
        text-align: center;
        padding-left: 15px;
    }

    #Email {
        margin-top: -7% !important;
    }

    .form-horizontal .form-group {
        margin-right: 11px;
        margin-left: -15px;
    }

    .validation-summary-errors ul li {
        margin: 0 -39px;
    }

    footer {
        display: none;
    }

    .form-horizontal .form-group {
        margin-right: 13px;
        margin-left: -11px;
        margin-top: 23px;
    }

    .fgt-pwd a {
        text-decoration: none;
        cursor: pointer;
    }

    .fgt-pwd {
        float: right;
        margin-right: -6%;
        margin-top: -3%;
    }
        .fgt-pwd a:hover {
            color: #6c6c6c;
        }
</style>

<div class="page-bg">
    <div class="page-wrapper">
        <div class="outer-wrapper">
            <div class="subscribe-form">
                <div class="form-topsection">
                    <h2>AUDISS Login</h2>
                </div>
                <div class="form-section">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control1", @placeholder = "User ID" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control1", @placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        @*<div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                    </div>
                                </div>
                            </div>*@
                        <div class="fgt-pwd">
                            <a href="@Url.Action("ForgotPassword")">Forgot Password ?</a>
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" value="Log in" class="btn btn-default btn-block btn-success" style="margin:6px;" />
                        </div>



                        @* Enable this once you have account confirmation enabled for password reset functionality
                            <p>
                                @Html.ActionLink("Forgot your password?", "ForgotPassword")
                            </p>*@
                    }
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@
}
