@model IEnumerable<EndToEnd.Models.ActiveDirectoryModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-default {
        margin: 4px;
    }

    .form-horizontal {
        padding: 10px;
    }

    select {
        padding: 10px;
    }
</style>

<div class="form-horizontal">
    <div class="form-group">
        @Html.Label("Category", htmlAttributes: new { @class = "control-label col-md-2" })
        <select>
            <option>Users created in last 1 month</option>
        </select>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayName("Created Date")
        </th>
    </tr>
    @if (Model != null)
            {
                foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>

            </tr>
        }
    }

</table>
@using (Html.BeginForm())
{
    <input type="hidden" name="DomainName" value="@ViewBag.DomainName" />
    <input type="hidden" name="ControlID" value="@ViewBag.ControlID" />
    if (Model != null)
    {
        <input type="hidden" name="ADD_ID" value="@Model.Select(x=> x.ADD_ID ).FirstOrDefault()" />
    }
    <button type="button" style="float:right;" class="btn btn-default" onclick="location.href='/home/'">Cancel</button>
    <button type="submit" class="btn btn-default" style="float:right;">Save</button>
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#activedirec").addClass("selected");
        $("#activedirec img").prop("src", "/Images/activedirec1.png");
    });
</script>